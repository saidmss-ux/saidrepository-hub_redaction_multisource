# ===============================
# üîß ENVIRONMENT
# ===============================
APP_ENV=development
DEBUG=true
APP_NAME=Document Extraction API
APP_VERSION=v1

# ===============================
# üåê SERVER
# ===============================
HOST=0.0.0.0
PORT=8000
API_PREFIX=/api/v1

# ===============================
# üîí SECURITY
# ===============================
SECRET_KEY=change_this_super_secret_key
ACCESS_TOKEN_EXPIRE_MINUTES=60
ALGORITHM=HS256

# ===============================
# üóÑ DATABASE
# ===============================
DATABASE_URL=sqlite:///./app.db
DB_ECHO=false

# ===============================
# üìÅ FILE STORAGE
# ===============================
MAX_UPLOAD_SIZE_MB=25
UPLOAD_DIR=./storage/uploads
TEMP_FILE_TTL_MINUTES=60
ALLOWED_FILE_TYPES=pdf,docx,txt,mp4

# ===============================
# ‚è± PROCESSING LIMITS
# ===============================
DOCUMENT_TIMEOUT_SECONDS=30
VIDEO_TIMEOUT_SECONDS=60
MAX_CONCURRENT_TASKS=4

# ===============================
# üåç NETWORK SECURITY
# ===============================
ALLOW_HTTP=true
ALLOW_HTTPS=true
BLOCK_PRIVATE_NETWORKS=true
REQUEST_TIMEOUT_SECONDS=15

# ===============================
# ü§ñ AI INTEGRATION
# ===============================
AI_ENABLED=false
AI_PROVIDER=openai
AI_API_KEY=
AI_MODEL=gpt-4o-mini
AI_TIMEOUT_SECONDS=30

# ===============================
# üß™ TESTING
# ===============================
TEST_DATABASE_URL=sqlite:///./test.db